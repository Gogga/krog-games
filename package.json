{
  "name": "krog-games",
  "version": "1.0.0",
  "description": "KROG Games - Multi-game platform with formal rule explanations",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --concurrency=20",
    "dev:chess": "turbo run dev --filter=@krog/chess-client --filter=@krog/chess-server --concurrency=5",
    "dev:platform": "turbo run dev --filter=@krog/platform --filter=@krog/server --concurrency=5",
    "dev:admin": "turbo run dev --filter=@krog/admin --filter=@krog/server --concurrency=5",
    "dev:server": "turbo run dev --filter=@krog/server",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:games": "turbo run build --filter=./games/**",
    "build:apps": "turbo run build --filter=./apps/*",
    "build:chess": "turbo run build --filter=@krog/chess-client --filter=@krog/chess-server --filter=@krog/chess-krog",
    "build:platform": "turbo run build --filter=@krog/platform",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "turbo run build --filter=./packages/*"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "chess",
    "krog",
    "multiplayer",
    "games",
    "platform",
    "react",
    "socket.io",
    "monorepo",
    "turborepo"
  ],
  "author": "Georg Philip Krog",
  "license": "ISC"
}
